<%- include('partials/header') %>



<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Edit Employee Details</h4>
            </div>
            <div class="card-body p-4">
                
                <form action="/employees/edit/<%= employee._id %>" method="POST" enctype="multipart/form-data">
                    
                    
                    <div class="text-center mb-4">
                        <img src="/employees/<%= employee._id %>/photo"
                             alt="Profile of <%= employee.name %>"
                             class="profile-pic-lg mb-2"
                             onerror="this.onerror=null; this.src='https://placehold.co/120x120/EFEFEF/AAAAAA?text=No+Photo';">
                        <h5><%= employee.name %></h5>
                    </div>

                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= employee.name %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="position" class="form-label">Position</label>
                        <input type="text" class="form-control" id="position" name="position" value="<%= employee.position %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="level" class="form-label">Level</label>
                        <select class="form-select" id="level" name="level" required>
                            <option value="Junior" <%= employee.level === 'Junior' ? 'selected' : '' %>>Junior</option>
                            <option value="Mid" <%= employee.level === 'Mid' ? 'selected' : '' %>>Mid-Level</option>
                            <option value="Senior" <%= employee.level === 'Senior' ? 'selected' : '' %>>Senior</option>
                        </select>
                    </div>

                    
                    <div class="mb-4">
                        <label for="profilePicture" class="form-label">Change Profile Picture</label>
                        <input class="form-control" type="file" id="profilePicture" name="profilePicture" accept="image/*">
                        <div class="form-text">Upload a new image to replace the current one. Leave blank to keep the existing photo.</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/employees" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Update Employee
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
